<!DOCTYPE html>
<html lang="es-AR">
    <%-include("../partials/head")%>
<body>

    <%-include("../partials/header")%>


  

    <main class="forms">
        <section class="form-container register">
            <h2>Registrate</h2>
            <hr>
            <form action="/processregister" method="POST">

                <div class="input-container">
                    <input type="text" class="input-style" name="name" placeholder="Ingrese su nombre" value=" <%=(locals.old && old.name) ? old.name : ""%>  ">
                    <% if (locals.errors && errors.name) { %>
                        <span class="error-message"> <%=errors.name.msg%>  </span>
                    <% } %>
                </div>

                <div class="input-container">
                    <input type="text" class="input-style" name="surname" placeholder="Ingrese su apellido" value=" <%=(locals.old && old.surname) ? old.surname : ""%>  ">
                    <% if (locals.errors && errors.surname) { %>
                        <span class="error-message"> <%=errors.surname.msg%>  </span>
                    <% } %>
                </div>

                <div class="input-container">
                    <input type="text" class="input-style" name="address" placeholder="Ingrese su domicilio" value=" <%=(locals.old && old.address) ? old.address : ""%>  ">
                    <% if (locals.errors && errors.address) { %>
                        <span class="error-message"> <%=errors.address.msg%>  </span>
                    <% } %>
                </div>

                <div class="input-container">
                    <input type="email" class="input-style" name="email" placeholder="Ingrese su email" value=" <%=(locals.old && old.email) ? old.email : ""%>  ">
                    <% if (locals.errors && errors.email) { %>
                        <span class="error-message"> <%=errors.email.msg%>  </span>
                    <% } %>
                </div>
                <div class="input-container">
                    <input type="password" class="input-style" name="pass" placeholder="Ingrese una contraseña">
                    <% if (locals.errors && errors.pass) { %>
                        <span class="error-message"> <%=errors.pass.msg%>  </span>
                    <% } %>
                </div>
                <div class="input-container">
                    <input type="password" class="input-style" name="pass2" placeholder="Confirmar contraseña">
                    <% if (locals.errors && errors.pass2) { %>
                        <span class="error-message"> <%=errors.pass2.msg%></span>
                    <% } %>
                </div>
                <div class="input_check-container">
                    <label for="recordar"> Acepto los <a href="">términos y condiciones</a> 
                    <input type="checkbox" name="terms" id="recordar"></label>
                    <% if (locals.errors && errors.terms) { %>
                        <span class="error-message"> <%=errors.terms.msg%></span>
                    <% } %>
                </div>
                <div class="btn-container">
                    
                    <button type="submit" class="btn btn-submit">Registrate</button>
                </div>
                <span><a href="login">¿Ya tenes cuenta? Ingresá</a></span>
            </form>
    
        </section>
    </main>
    <%-include("../partials/footer")%>

 

    
</body>
</html>